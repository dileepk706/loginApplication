 <%- include('header') -%>


<div   class=" text-cente  center-div" id="login">
    <div class=" container w-25 border py-5">
        <div style="padding-left: 62px;" class=" title pb-5 Head-text-center Head-text-color">
            <h2 class=" font-wieght-bold  ">Login system</h2>
            <span style="padding-left: 13px;" class="span">Log in for the existing user</span>
            <% if(locals.logout){%>
            <div style="padding-left: 32px;color: red;font-size: .8em ;" class=" alert-success ">
             <%= logout %>
            </div>
            <%}%>
            <% if (locals.invalid) {%>
            <div style="padding-left: 20px;color: red;font-size: .8em ;" class=" alert-success ">
                <%= invalid %>
            </div>
            <%}%>
        </div>
        <form action="/login" method="post" class="pt-3">  
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted text-left">Register email address</small>
            </div> 
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div> 
            <div class="btnPading">
                <button type="submit" class="btn btn-success rounded-pill">submit</button> 
            </div>
         </form>
    </div>
</div>



 <%- include('footer') -%>
